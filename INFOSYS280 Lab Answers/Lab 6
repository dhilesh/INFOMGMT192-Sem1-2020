// Generate the HTML for visualizing a hierarchy of categories
function displayCategories(CATEGORY_DIRECTORY) {
	// Level 1 Categories
  for (let category of CATEGORY_DIRECTORY) {
    let categoryItem = $("<li>" + category.name + "</li>");
    
    // An ul element must exist with id set to "directory"
    $("#directory").append(categoryItem);

    let categoryL2List = $("<ul></ul>");
    categoryItem.append(categoryL2List);

		// Level 2 subcategories
    for (let categoryL2 of category.subcategories) {
      let categoryL2Item = $("<li>" + categoryL2.name + "</li>");
      categoryL2List.append(categoryL2Item);

			// Level 3 subcategories 
      if ("subcategories" in categoryL2) { // Not all categories have a third level
        console.log("Displaying third level categories for " + categoryL2.name);

        let categoryL3List = $("<ul></ul>");
        categoryL2Item.append(categoryL3List);

        for (let categoryL3 of categoryL2.subcategories) {
          let categoryL3Item = $("<li>" + categoryL3.name + "</li>");
          categoryL3List.append(categoryL3Item);
        }

      }
    }
  }
}

// PROBLEM #3: Updating the Catalog Structure with JavaScript
// displayCategories(CATEGORY_DIRECTORY_LEVEL_2);

// PROBLEM #4: Updating the Catalog Structure with 3rd Level Subcategories
displayCategories(CATEGORY_DIRECTORY_LEVEL_3);
